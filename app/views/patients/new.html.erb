<div class="new-patient-form">
  <h1 class="form-title">Register New Patient</h1>

  <%= form_with model: @patient, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= form.label :age, class: 'form-label' %>
      <%= form.number_field :age, class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= form.label :gender, class: 'form-label' %>
      <%= form.select :gender, ['Male', 'Female', 'Other'], { include_blank: 'Select Gender' }, class: 'form-select' %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Create Patient', class: 'btn-submit' %>
    </div>
  <% end %>

  <%= link_to 'Back', patients_path, class: 'btn-back' %>
</div>
