<h1 class="login-title">Login</h1>

<div class="login-container">
  <%= form_with(url: login_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :Role, class: 'form-label' %>
      <%= form.text_field :username, class: 'form-control', placeholder: 'Enter your role' %>
    </div>
    <div class="form-group">
      <%= form.label :password, class: 'form-label' %>
      <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
    </div>
    <div>
      <%= form.submit 'Login', class: 'btn-submit' %>
    </div>
  <% end %>
</div>
